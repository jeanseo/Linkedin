<% include partials/search-header.ejs %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-auto"><a href="/admin/employees" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Admin employees</a> </div>
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm" action="/api/search" id="searchForm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div>
                    <!--end of col-->
                    <div class="col">
                            <input class="form-control form-control-lg form-control-borderless" name="searchText" type="search" placeholder="Search">
                    </div>
                    <div class="col">
                        <select class="form-control form-control-lg form-control-borderless custom-select" id="index-select" name="index_select">
                                <option value="all">All</option>
                                <option value="employees">Employees</option>
                                <option value="companies">Companies</option>
                            </select>
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-lg btn-success" type="submit">Search</button>
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
    <div class="row">
        <div class="col-2" id="search-options">
            <div id="industry">
                <% include partials/search-industry.ejs %>
            </div>
            <div id="job_titles">
                <% include partials/search-job_titles.ejs %>
            </div>
        </div>
        <div class="col-7" id="result"><ol class="list-group"></ol></div>
        <div class="col-3" >
            <div id="map" style="width: 100%; height: 530px;"></div>
            <form><input type="hidden" name="coords" id="coords"></form>
            <button id="search-area" class="btn btn-primary btn-lg active">Search in this area</button>
        </div>

    </div>


</div>
</body>
</html>